{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://flynn.io/schema/controller/common#",
  "definitions": {
    "id": {
      "$ref": "/schema/common#/definitions/id"
    },
    "created_at": {
      "$ref": "/schema/common#/definitions/created_at"
    },
    "updated_at": {
      "$ref": "/schema/common#/definitions/updated_at"
    },
    "config": {
      "$ref": "/schema/common#/definitions/config"
    },
    "apps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/id"
      }
    },
    "cmd": {
      "description": "shell command",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "entrypoint": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "strategy": {
      "type": "string",
      "enum": ["all-at-once", "one-by-one", "postgres"]
    },
    "meta": {
      "description": "client-specified metadata",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "env": {
      "description": "environment variables",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  }
}
