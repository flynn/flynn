include_rules
: |> !cgo |> image/bin/flynn-test
: |> !cgo ./runner |> bin/flynn-test-runner
: |> !go ./util/file-server |> image/bin/flynn-test-file-server

: img/packages.sh |> !build-layer |> layer/packages.json
: img/files.sh image/bin/* image/run.sh |> !build-layer |> layer/files.json
: layer/packages.json layer/files.json | $(ROOT)/<builder> |> ^ build-artifact test^ $(ROOT)/builder/bin/flynn-build artifact ubuntu-trusty %f > %o |> $(ROOT)/image/test.json
