include_rules
: |> !go ./echoer |> bin/echoer
: |> !go ./ping |> bin/ping
: |> !go ./signal |> bin/signal
: |> !go ./ish |> bin/ish
: |> !go ./partial-logger |> bin/partial-logger
: |> !go ./http-blocker |> bin/http-blocker
: |> !go ./oom |> bin/oom
: |> !go ./proxy |> bin/proxy

: img/files.sh bin/* |> !build-layer |> layer/files.json
: layer/files.json | $(ROOT)/<builder> |> ^ build-artifact test-apps^ $(ROOT)/builder/bin/flynn-build artifact ubuntu-trusty %f > %o |> $(ROOT)/image/test-apps.json
