{
  "variables": {
    "headless": "false",
    "input_dir": ".",
    "output_dir": ".",
    "iso_sha": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
    "flynn_repository": "https://dl.flynn.io",
    "source_ami": "ami-9a562df2",
    "aws_region": "us-east-1",
    "version": ""
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "headless": "{{ user `headless` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "source_path": "{{ user `input_dir` }}/base_virtualbox_{{ user `iso_sha` }}/flynn-base.ovf",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "20m",
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "4096"],
        ["modifyvm", "{{ .Name }}", "--cpus", "4"]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "flynn-base"
    },
    {
      "type": "vmware-vmx",
      "headless": "{{ user `headless` }}",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "source_path": "{{ user `input_dir` }}/base_vmware_{{ user `iso_sha` }}/flynn-base.vmx",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "20m",
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "4"
      },
      "vm_name": "flynn-base"
    },
    {
      "type": "amazon-ebs",
      "ami_block_device_mappings": [{
        "device_name": "/dev/sda1",
        "volume_size": "50",
        "volume_type": "gp2"
      }],
      "ami_groups": ["all"],
      "ami_name": "flynn-{{ user `version` }}-ubuntu-14.04-{{timestamp}}",
      "ami_regions": [
        "ap-northeast-1",
        "ap-southeast-1",
        "ap-southeast-2",
        "eu-central-1",
        "eu-west-1",
        "sa-east-1",
        "us-west-1",
        "us-west-2"
      ],
      "instance_type": "m3.large",
      "region": "{{ user `aws_region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "ssh_username": "ubuntu"
    }
  ],
  "_comment": "Sleep provisioner for amazon-ebs is an attempt to fix gh#1829",
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 60"],
      "only": ["amazon-ebs"]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/upgrade.sh",
        "scripts/install.sh"
      ],
      "environment_vars": [
        "FLYNN_REPOSITORY={{ user `flynn_repository` }}",
        "FLYNN_VERSION={{ user `version` }}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "override": {
        "amazon-ebs": {
          "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{ user `output_dir` }}/flynn-base_{{ user `version` }}_{{ .Provider }}.box",
      "except": ["amazon-ebs"]
    }
  ]
}
